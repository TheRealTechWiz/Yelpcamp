<%- include('partials/header.ejs');-%>
<div class="container">
    <h1 style="text-align: center">Edit Comment</h1>
    <div class="row">
        <div style="width: 30%; margin: 50px auto;">
            <form method="POST" action="/camps/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT">        
                <div class="form-group">
                    <input type="text" name="comment[content]" value="<%=comment.content%>" />
                </div>
                
                <div class="form-group">
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
            <a href="/camps">Go Back</a>
        </div>
    </div>
</div>

